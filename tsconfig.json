{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./static/js",
        "rootDir": "./src",
        "sourceMap": true,
        "declaration": false,
        "allowJs": true,
        "checkJs": false,
        "types": [
            "node"
        ],
        "baseUrl": "./src",
        "paths": {
            "*": [
                "*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}